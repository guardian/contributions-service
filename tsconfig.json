{
    "compilerOptions": {
        "target": "es2018",
        "strict": true,
        "module": "CommonJS",
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "outDir": "dist",
        "typeRoots": ["./src/@types", "./node_modules/@types", "node_modules/@types"],
        "rootDirs": ["src", "stories"],
        "baseUrl": "src",
        "types": ["node", "jest", "@emotion/react"],
        "skipLibCheck": true,
        "jsxImportSource": "@emotion/react"
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "src/**/*.test.ts",
        "src/factories/*",
        "src/tests/banners/*.tests.ts"
    ]
}
